<title>Insert title here</title>
</head>
<body>
<jsp:include page="header.jsp"></jsp:include>
<section>
<h2 style="text-align : center"><b>후보자등수</b></h2>
<table border = 1>
<tr>
	<td>후보번호</td>
	<td>성명</td>
	<td>총투표건수</td>
</tr>

<%
try{
	Class.forName("oracle.jdbc.OracleDriver");
	Connection con = DriverManager.getConnection
			("jdbc:oracle:thin:@//localhost:1521/xe","system","1234");
	Statement stmt = con.createStatement();
	String sql = "SELECT kv.m_no 후보번호,km.m_name 성명, COUNT(kv.v_jumin) 총투표건수"+
	" FROM kw03_vote kv, kw03_member km "+ 
	" WHERE kv.v_confirm = 'Y' and km.m_no = kv.m_no "+
	" GROUP BY kv.m_no, km.m_name "+
	" ORDER BY 총투표건수 DESC";
	int result = 0;
	ResultSet rs = stmt.executeQuery(sql);
	while(rs.next()){
		out.print("<tr>");
		out.print("<td>"+rs.getString(1)+"</td>");
		out.print("<td>"+rs.getString(2)+"</td>");
		out.print("<td>"+rs.getString(3)+"</td>");
		out.print("</tr>");
		result = result + rs.getInt(3);
	}
	out.print("<tr>");
	out.print("<td colspan = 2>전체투표수</td>");
	out.print("<td>"+result+"</td>");
	out.print("</tr>");
}catch(Exception e){
	e.printStackTrace();
}
%>
</table>
</section>
</body>
