<%
try{
	Class.forName("oracle.jdbc.OracleDriver");
	Connection con = DriverManager.getConnection
			("jdbc:oracle:thin:@//localhost:1521/xe","system","1234");
	Statement stmt = con.createStatement();
	String sql = " select tc.c_name, to_char(ti.t_date, 'YYYY-MM-DD'), "+
				 " tc.c_tel1||'-'||tc.c_tel2||'-'||tc.c_tel3, tp.p_name, "+
				 " case ti.t_type when 'I' then '입고' "+
				 " 				  when 'O' then '출고' end, "+
				 " to_char(p_outcost, 'FM999,999,999')||'원' "+
				 " from tbl_inout_202002 ti, tbl_company_202002 tc, tbl_product_202002 tp "+
				 " where ti.p_code=tp.p_code and ti.c_code=tc.c_code ";
	ResultSet rs = stmt.executeQuery(sql);
	while(rs.next()){
		out.print("<tr>");
		out.print("<td>"+ rs.getString(1) +"</td>");
		out.print("<td>"+ rs.getString(2) +"</td>");
		out.print("<td>"+ rs.getString(3) +"</td>");
		out.print("<td>"+ rs.getString(4) +"</td>");
		out.print("<td>"+ rs.getString(5) +"</td>");
		out.print("<td>"+ rs.getString(6) +"</td>");
		out.print("</tr>");
	}
	stmt.close();
	con.close();
}catch(Exception ex){
	ex.printStackTrace();
}
%>
</table>
</section>
