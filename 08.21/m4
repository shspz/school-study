<section>
<h2>출고상품 출력하기</h2>
<table border=1>
<tr><th>상품코드<th>회사명<th>수량<th>출고이익</tr>
<%
try{
	Class.forName("oracle.jdbc.OracleDriver");
	Connection con = DriverManager.getConnection
			("jdbc:oracle:thin:@//localhost:1521/xe","system","1234");
	Statement stmt = con.createStatement();
	String sql = " select tp.p_code, tc.c_name, ti.t_cnt||'개', "+
				 " '₩'||to_char((tp.p_outcost-tp.p_incost)*ti.t_cnt, 'FM999,999,999') "+
				 " from tbl_inout_202002 ti, tbl_company_202002 tc, tbl_product_202002 tp "+
				 " where ti.p_code=tp.p_code and ti.c_code=tc.c_code and ti.t_type='O' "+
				 " order by tp.p_code ";
	ResultSet rs = stmt.executeQuery(sql);
	while(rs.next()){
		out.print("<tr>");
		out.print("<td>"+ rs.getString(1) +"</td>");
		out.print("<td>"+ rs.getString(2) +"</td>");
		out.print("<td>"+ rs.getString(3) +"</td>");
		out.print("<td style='text-align:right'>"+ rs.getString(4) +"</td>");
		out.print("</tr>");
	}
	sql = " select '₩'||to_char(sum((tp.p_outcost-tp.p_incost)*ti.t_cnt), 'FM999,999,999') "+
		  " from tbl_inout_202002 ti, tbl_company_202002 tc, tbl_product_202002 tp "+
		  " where ti.p_code=tp.p_code and ti.c_code=tc.c_code and ti.t_type='O' ";
	rs = stmt.executeQuery(sql);
	if(rs.next()){
		out.print("<tr>");
		out.print("<td colspan=3>출고이익 총금액</td>");
		out.print("<td>"+ rs.getString(1) +"</td>");
		out.print("</tr>");
	}
	stmt.close();
	con.close();
}catch(Exception ex){
	ex.printStackTrace();
}
%>
</table>
</section>
