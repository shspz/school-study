        function aaa(){
            if(document.frm.txt1.value.length==0){
                alert("회원번호가 입력되지 않았습니다.")
            }
            if(document.frm.txt2.value.length==0){
                alert("회원성명이 입력되지 않았습니다.")
            }
            if(document.frm.txt3.value.length==0){
                alert("회원전화가 입력되지 않았습니다.")
            }
            if(document.frm.txt4.value.length==0){
                alert("회원주소가 입력되지 않았습니다.")
            }
            if(document.frm.dt.value.length==0){
                alert("가입일자가 선택되지 않았습니다.")
            }
            if(document.frm.txt5.value.length==0){
                alert("고객등급이 입력되지 않았습니다.")
            }
            if(document.frm.txt6.value.length==0){
                alert("도시코드가 입력되지 않았습니다.")
            }
        }
    </script>
